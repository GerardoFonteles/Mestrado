% Programa que raliza a quantização de imagens

clc;
clear all;
close all;

max = 255;

% Imagem de baixos detalhes
lena = imread('woman_blonde.jpg');
lena = lena(:,:,1);
c = double(lena) / max;

figure(8);
set(8,'Name','8Bits');
imshow(lena);

f = (2^7 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(7);
set(7,'Name','7bits');
imshow(s);

f = (2^6 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(1);
set(1,'Name','6bits');
imshow(s);

f = (2^5 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(2);
set(2,'Name','5bits');
imshow(s);

f = (2^4 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(3);
set(3,'Name','4bits');
imshow(s);

f = (2^3 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(4);
set(4,'Name','3bits');
imshow(s);

f = (2^2 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(5);
set(5,'Name','2bits');
imshow(s);

f = (2^1 - 1);
s = imadjust(uint8(round(f * c)), [0 f/max],[0 1]);
figure(6);
set(6,'Name','1bit');
imshow(s);

